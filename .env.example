# PubMed Clinical Trial Classifier - Environment Configuration
# Copy this file to .env and customize as needed

# Ollama Configuration
PUBMED_OLLAMA_BASE_URL=http://localhost:11434
PUBMED_OLLAMA_MODEL=llama3.1:8b
PUBMED_OLLAMA_TIMEOUT=120
PUBMED_OLLAMA_NUM_CTX=4096
PUBMED_OLLAMA_TEMPERATURE=0.1

# Processing Configuration
PUBMED_BATCH_SIZE=10
PUBMED_MAX_CONCURRENT_REQUESTS=1
PUBMED_RESUME_FROM_CHECKPOINT=True

# File Paths
PUBMED_INPUT_CSV=data/pubmed_data_2000.csv
PUBMED_OUTPUT_DIR=output
PUBMED_CHECKPOINT_DIR=output/checkpoints
PUBMED_LOG_DIR=logs
PUBMED_PROMPT_TEMPLATE=prompts/clinical_trial_classifier.yaml

# Structured Output Settings
PUBMED_USE_OUTLINES=True
PUBMED_USE_JSON_REPAIR=True
PUBMED_MAX_RETRIES=3
PUBMED_RETRY_DELAY_SECONDS=2.0

# Logging
PUBMED_LOG_LEVEL=INFO
PUBMED_VERBOSE=False
